<Window x:Class="Robots.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Robots.Gui"
        xmlns:programsSection="clr-namespace:Robots.Gui.Modules.Programs.ProgramsSection"
        xmlns:programList="clr-namespace:Robots.Gui.Modules.Programs.ProgramList"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <programsSection:ProgramSectionViewModel/>
    </Window.DataContext>
    
    <StackPanel Orientation="Vertical">
        <Ribbon Name="Ribbon" SelectedIndex="0">
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu Name="RibbonApplicationMenu" AllowDrop="false" Loaded="RibbonApplicationMenu_Loaded" >
                    <RibbonApplicationMenuItem Header="Robot List" />
                    <RibbonApplicationMenuItem Header="Program editor" />
                    <RibbonApplicationMenuItem Header="Exit" />
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>
            
        </Ribbon>


        <programsSection:ProgramSectionControl DataContext="{Binding}" />


    </StackPanel>
</Window>
