<UserControl x:Class="Robots.Gui.Modules.Programs.AddProgram.CommandList.CommandMoveControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Robots.Gui.Modules.Programs.AddProgram.CommandList"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="{Binding Hint}"/>
            <TextBlock MinWidth="50" Text="{Binding Value}" />
        </StackPanel>

        <Button Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            Add Move
        </Button>
            
    </Grid>
</UserControl>
