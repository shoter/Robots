<UserControl x:Class="Robots.Gui.Modules.Programs.ProgramView.ProgramViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Robots.Gui.Modules.Programs.ProgramView"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox Text="{Binding Name}"></TextBox>
            <Label>Commands</Label>
        </StackPanel>

        <ListView Grid.Row="1">
            asd
            asd
        </ListView>

        <StackPanel Orientation="Vertical" Grid.Row="2" HorizontalAlignment="Center">
            <Label>Add new command</Label>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button>Move</Button>
                <Button>Turn</Button>
                <Button>Beep</Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
