<UserControl x:Class="Robots.Gui.Modules.Robots.RobotList.RobotListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Robots.Gui.Modules.Robots.RobotList"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:RobotListViewModel/>
    </UserControl.DataContext>
    <ListView ItemsSource="{Binding Robots}">
        <ListView.DataContext>
            <local:RobotListItemViewModel/>
        </ListView.DataContext>
        <ListView.View>
            <GridView>
                <GridViewColumn Width="150" Header="Name" DisplayMemberBinding="{Binding DisplayName}"/>
                <GridViewColumn Width="200" Header="Status" DisplayMemberBinding="{Binding Status}"/>
            </GridView>
        </ListView.View>
    </ListView>
</UserControl>
